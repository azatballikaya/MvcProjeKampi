@model Heading
@{
    ViewData["Title"] = "AddHeading";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}


<h1>Başlık Ekleme Sayfası</h1>
<br />
@using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Başlık Adı:")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HeadingName)

        <br />
        @Html.Label("Kategori:")
        @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.Categories,new{@class="form-control"})
       

        <br />
        @Html.Label("Yazar:")
        @Html.DropDownListFor(x => x.WriterId, (List<SelectListItem>)ViewBag.Writer, new { @class = "form-control" })

    
        <br />
        <button class="btn btn-info">Başlığı Ekle</button>

    </div>
}



